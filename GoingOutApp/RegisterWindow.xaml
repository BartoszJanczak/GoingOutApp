<Window x:Class="GoingOutApp.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoingOutApp"
        mc:Ignorable="d"
        Title="RegisterWindow" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True">

    <Border CornerRadius="50">
        <Border CornerRadius="50"
                BorderThickness="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E0E0E0" Offset="0"/>
                    <GradientStop Color="#C0C0C0" Offset="0.25"/>
                    <GradientStop Color="#A0A0A0" Offset="0.75"/>
                    <GradientStop Color="#808080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#E0E0E0" Offset="0"/>
                    <GradientStop Color="#C0C0C0" Offset="0.25"/>
                    <GradientStop Color="#A0A0A0" Offset="0.75"/>
                    <GradientStop Color="#808080" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Rejestracja" FontFamily="Verdana" FontSize="28" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="314,69,0,0" Height="42" Width="161" Foreground="White" Grid.ColumnSpan="2"/>

                <!-- Lista ofert po lewej stronie -->

                <!-- Mapa świata po prawej stronie -->
                <Button Style="{StaticResource Windowbutton}" x:Name="Exitbutton" Click="ExitButton_Click" Content="X" HorizontalAlignment="Left" Margin="403,5,0,0" VerticalAlignment="Top" Height="42" Width="48" Grid.Column="1"/>
                <Button Style="{StaticResource Windowbutton}" x:Name="MinimizeButton" Click="MinimizeButton_Click" Content="-" HorizontalAlignment="Left" Margin="355,5,0,0" VerticalAlignment="Top" Height="42" Width="48" Grid.Column="1"/>
                <TextBox HorizontalAlignment="Left" Margin="2,148,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
                <TextBox HorizontalAlignment="Left" Margin="2,188,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
                <Button Grid.Column="1" Content="Zarejestruj sie" HorizontalAlignment="Left" Margin="38,318,0,0" VerticalAlignment="Top" Click="Button_Click"/>
                <TextBox HorizontalAlignment="Left" Margin="2,228,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
                <TextBox HorizontalAlignment="Left" Margin="2,272,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="154" Grid.Column="1"/>
            </Grid>
        </Border>
    </Border>
</Window>
