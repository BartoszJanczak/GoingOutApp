<Window x:Class="GoingOutApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoingOutApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        MouseDown="Window_mousedown">

    <Border CornerRadius="50">
        <Border CornerRadius="50"
                BorderThickness="5">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E0E0E0" Offset="0"/>
                    <GradientStop Color="#C0C0C0" Offset="0.25"/>
                    <GradientStop Color="#A0A0A0" Offset="0.75"/>
                    <GradientStop Color="#808080" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#FDFDFD" Offset="0"/>
                    <GradientStop Color="#E6E6E6" Offset="0.25"/>
                    <GradientStop Color="#CFCFCF" Offset="0.75"/>
                    <GradientStop Color="#B8B8B8" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="GoingOut" FontFamily="Verdana" FontSize="28" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="59,18,0,0" Grid.Column="1" Height="42" Width="136" Foreground="Black"/>

                <ListView Style="{StaticResource EventList}" Grid.Column="0" FontSize="20" Margin="10,81,0,36" Background="Transparent" Foreground="Black">
                    <ListViewItem>Koncert zespołu rock</ListViewItem>
                    <ListViewItem>Kino samochodowe</ListViewItem>
                    <ListViewItem>Warsztaty kulinarne</ListViewItem>
                    <ListViewItem>Piknik w parku</ListViewItem>
                    <ListViewItem>Wystawa sztuki</ListViewItem>
                    <ListViewItem>Impreza kulturalna</ListViewItem>
                    <ListViewItem>Zajęcia jogi na plaży</ListViewItem>
                    <ListViewItem>Festiwal filmowy</ListViewItem>
                    <ListViewItem>Konferencja naukowa</ListViewItem>
                    <ListViewItem>Turniej szachowy</ListViewItem>
                    <ListViewItem>Webinar o rozwoju</ListViewItem>
                    <ListViewItem>Zlot samochodowy</ListViewItem>
                    <ListViewItem>Kino plenerowe</ListViewItem>
                </ListView>

                <Image x:Name="MapBox" Grid.Column="1" Stretch="UniformToFill" Margin="16,82,26,38"/>
                <Button Style="{StaticResource Navbutton}" x:Name="ProfileButton" Grid.Column="1" Content="Profile" FontFamily="Verdana" HorizontalAlignment="Left" Margin="532,14,0,0" VerticalAlignment="Top" Height="50" Width="88" Click="ProfileButton_Click"/>
                <Button Style="{StaticResource Navbutton}" Grid.Column="1" Content="Calendar" FontFamily="Verdana" HorizontalAlignment="Left" Margin="394,15,0,0" VerticalAlignment="Top" Height="49" Width="114"/>
                <Button Style="{StaticResource Windowbutton}" x:Name="ExitButton" Click="ExitButton_Click" Content="X" HorizontalAlignment="Left" Margin="694,18,0,0" VerticalAlignment="Top" Height="42" Width="48" Grid.Column="1"/>
                <Button Style="{StaticResource Windowbutton}" x:Name="MinimizeButton" Click="MinimizeButton_Click" Content="-" HorizontalAlignment="Left" Margin="646,18,0,0" VerticalAlignment="Top" Height="42" Width="48" Grid.Column="1"/>
                <Button Style="{StaticResource Navbutton}" x:Name="AddButon" Content="+" FontFamily="Verdana" HorizontalAlignment="Center" Margin="0,14,0,0" VerticalAlignment="Top" Height="50" Width="88" Click="AddButton_Click"/>

                <!--NIE WIEM CZEMU TO NIE DZIAŁA-->
                <!--<Label Content="&#xf133;" Foreground="White" HorizontalAlignment="Center" Margin="0,18,0,0" VerticalAlignment="Top" Height="34" Width="28" FontFamily="/data/fonts/#Font Awesome 6 Free Solid" FontSize="20" Grid.Column="1"/>-->
            </Grid>
        </Border>
    </Border>
</Window>
